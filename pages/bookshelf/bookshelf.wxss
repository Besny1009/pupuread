.readTime{
  padding: 30rpx 30rpx 0rpx 30rpx;
  border-bottom: 1rpx solid #f8e9bd;
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 26rpx;
}
.timeAndExchange{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-left: 20rpx;
}
.timeStyle{
  font-size: 80rpx;
  color: #000;
  font-weight: 900;
}
.weekTime{
  color: #7a7a77;
}
.exchange{
  color: #010101;
  padding-left: 20rpx;

}
.gtStyle{
  color: #030303;
  padding: 2rpx;
}
.signInStatus{
  background: #e5ddcd;
  color: #000;
  border-radius: 5rpx;
  padding: 10rpx 20rpx;
  font-weight: 900;
}

.footPrint{
  font-weight: 900;
  color: #050300;
  background:#ffcb18;
  border-radius: 5rpx;
  padding: 10rpx 20rpx;
  margin-right: 5rpx;
}

.showBook{
  margin-top: 70rpx;

}
.weui-slideview{
  margin-top: 40rpx;
}
.everyBookInfo{
  display: flex;
  align-items: center;
}
.everyBookInfo image{
  width: 133rpx;
  height: 185rpx;
  display: block;
}

.bookInfo{
  padding: 0rpx 30rpx;
  font-size: 22rpx;
  color: #999;
}

.bookName{
  color:#000;
  font-size: 34rpx;
}

.unread{
  padding: 15rpx 0rpx;
}


.bookNumber{
